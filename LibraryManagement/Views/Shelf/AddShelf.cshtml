@using LibraryManagement.Models
@model LibraryManagement.Models.ShelfModel

@{
    var profileData = Session["UserProfile"] as UserSession;
    if (profileData.Designation != 3)
    {
        ViewBag.Title = "Shelf";
        Layout = "~/Views/Shared/_Master.cshtml";
    }
    else
    {
        ViewBag.Title = "Shelf";
        Layout = "~/Views/Shared/_User.cshtml";
    }
}

<div class="content" style="background-color: rgba(222, 222, 222, 0.6); padding: 2%;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <a href="@Url.Action("GetAllShelfDetails", "Shelf")"><button class="btn btn-sm" style="float: left;"><span class="glyphicon glyphicon-chevron-left"></span>Back</button></a>
                <h4 style="text-align: center;">Add Shelf</h4>
                <hr/>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="container-fluid">
                    <div class="content">
                        @using (Html.BeginForm("AddShelf", "Shelf", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-2" style="margin-top: 0.6%; text-align: right;">
                                        @Html.LabelFor(model => model.RackNo)
                                    </div>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.RackNo, new {htmlAttributes = new {@class = "form-control"}})
                                        @Html.ValidationMessageFor(model => model.RackNo, "", new {@class = "text-danger"})
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10" style="margin-top: 1%;">
                                        <input class="btn btn-success btn-fill pull-right" type="submit" value="Add Shelf" name="AddShelf"/>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Content/assets/js/jquery-1.10.2.js"></script>