@using LibraryManagement.Models
@model LibraryManagement.Models.PublicationModel

@{
    var profileData = Session["UserProfile"] as UserSession;
    if (profileData.Designation != 3)
    {
        ViewBag.Title = "Publication";
        Layout = "~/Views/Shared/_Master.cshtml";
    }
    else
    {
        ViewBag.Title = "Publication";
        Layout = "~/Views/Shared/_User.cshtml";
    }
}

<div class="content">
    <div class="container-fluid" style="background-color: rgba(222, 222, 222, 0.6); padding: 2%;">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <a href="@Url.Action("GetAllPublicationDetails", "Publication")"><button class="btn btn-sm" style="float: left;"><span class="glyphicon glyphicon-chevron-left"></span>Back</button></a>
                        <h4 class="title" style="text-align: center;">Add Publication</h4>
                        <hr/>

                    </div>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="container-fluid">
                        <div class="content">
                            @using (Html.BeginForm("AddPublication", "Publication", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-2" style="margin-top: 0.6%;">
                                            @Html.LabelFor(model => model.PublicationName)
                                        </div>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.PublicationName, new {htmlAttributes = new {@class = "form-control", @placeholder = "Publisher"}})
                                            @Html.ValidationMessageFor(model => model.PublicationName, "", new {@class = "text-danger"})
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10" style="margin-top: 1%;">
                                            <input class="btn btn-success btn-fill pull-right" type="submit" value="Add Publication" name="AddBook" />
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Content/assets/js/jquery-1.10.2.js"></script>